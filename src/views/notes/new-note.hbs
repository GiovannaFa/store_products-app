<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Type Title" autofocus value={{title}}>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Type Description" value={{description}}></textarea>
                </div>

                <div class="form-group">
                    <input type="number" name="quantity" class="form-control" placeholder="cantidad" value={{quantity}}>
                </div>
                <div class="form-group">
                    <input type="number" step="0.01" name="price" class="form-control" placeholder="price" value={{price}}>
                </div>
                <div class="form-group">
                    <input type="number" step="0.01" name="actual_price" class="form-control" placeholder="new price" value={{actual_price}}>
                </div>
                <div class="form-group">
                    <input type="date" name="expire_date" class="form-control" placeholder="expiring date" value={{expire_date}}>
                </div>
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>