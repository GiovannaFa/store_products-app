<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h3>Edit Note</h3>
            </div>
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title"
                    value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="quantity" placeholder="quantity"
                    value="{{note.quantity}}">
                </div>
                <div class="form-group">
                    <input type="number" step="0.01" class="form-control" name="price" placeholder="price"
                    value="{{note.price}}">
                </div>
                <div class="form-group">
                    <input type="number" step="0.01" class="form-control" name="actual_price" placeholder="price"
                    value="{{note.actual_price}}">
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" name="expire_date" placeholder="expiring date"
                    value="{{note.expire_date}}">
                </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            save
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>